.container{padding:24rpx}
.header{font-size:32rpx;font-weight:600;margin-bottom:20rpx}
.form-item{background:#fff;padding:24rpx 20rpx;border-radius:12rpx;margin-bottom:16rpx;display:flex;justify-content:space-between;align-items:center}
.label{color:#333;font-size:28rpx}
.submit-btn{background:#ddd;color:#fff;text-align:center;padding:28rpx 0;border-radius:12rpx;margin-top:24rpx}
.submit-btn.active{background:#07c160} 

/* 封面图上传样式 */
.cover-item {
  align-items: flex-start;
}
.cover-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.cover-upload {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background-color: #f5f5f5;
  position: relative;
}
.cover-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.upload-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #999;
}
.upload-icon {
  font-size: 48rpx;
  line-height: 1;
  margin-bottom: 8rpx;
}
.upload-text {
  font-size: 24rpx;
}
.error-tip {
  color: #ff4d4f;
  font-size: 24rpx;
  margin-top: 8rpx;
}
.tip-text {
  color: #999;
  font-size: 24rpx;
  margin-top: 8rpx;
}
