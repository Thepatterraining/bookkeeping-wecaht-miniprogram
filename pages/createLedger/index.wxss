.container {
  padding: 30rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
}

.header {
  font-size: 38rpx;
  font-weight: 600;
  margin-bottom: 40rpx;
  color: #4a4f9f;
  text-align: center;
  letter-spacing: 2rpx;
}

.form-item {
  background: #fff;
  padding: 28rpx 24rpx;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(74, 79, 159, 0.08);
}

.label {
  color: #333;
  font-size: 30rpx;
  font-weight: 500;
}

input {
  text-align: right;
  width: 65%;
  font-size: 28rpx;
  color: #333;
  padding: 8rpx 0;
}

.submit-btn {
  background: linear-gradient(135deg, #6c72cb, #8a6bc1);
  color: #fff;
  text-align: center;
  padding: 28rpx 0;
  border-radius: 16rpx;
  margin-top: 40rpx;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 16rpx rgba(108, 114, 203, 0.25);
  transition: all 0.3s ease;
  letter-spacing: 2rpx;
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(108, 114, 203, 0.2);
}

.submit-btn.active {
  background: linear-gradient(135deg, #6c72cb, #8a6bc1);
}

/* 封面图上传样式 */
.cover-item {
  align-items: flex-start;
}

.cover-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.cover-upload {
  width: 180rpx;
  height: 180rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: rgba(108, 114, 203, 0.05);
  position: relative;
  box-shadow: 0 4rpx 12rpx rgba(74, 79, 159, 0.1);
  border: 2rpx dashed rgba(108, 114, 203, 0.3);
}

.cover-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.upload-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #6c72cb;
}

.upload-icon {
  font-size: 52rpx;
  line-height: 1;
  margin-bottom: 12rpx;
}

.upload-text {
  font-size: 26rpx;
}

.error-tip {
  color: #e26d89;
  font-size: 24rpx;
  margin-top: 12rpx;
}

.tip-text {
  color: #888;
  font-size: 24rpx;
  margin-top: 12rpx;
}

.tips {
  margin-top: 24rpx;
  text-align: center;
}

.tips-text {
  font-size: 26rpx;
  color: #888;
}
