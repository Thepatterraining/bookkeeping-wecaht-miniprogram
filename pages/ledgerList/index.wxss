.container{
  padding:24rpx;
  position:relative;
  background-color: #f5f7fa;
  min-height: 100vh;
}

.page-title{
  font-size:38rpx;
  font-weight:600;
  margin-bottom:30rpx;
  text-align:center;
  color: #4a4f9f;
  letter-spacing: 2rpx;
}

.search-bar{
  background:#ffffff;
  border-radius:32rpx;
  padding:16rpx 24rpx;
  display:flex;
  align-items:center;
  margin-bottom:30rpx;
  box-shadow: 0 2rpx 10rpx rgba(74, 79, 159, 0.08);
}

.search-bar .icon{
  margin-right:12rpx;
  color:#6c72cb;
}

.search-input{
  flex:1;
  font-size:28rpx;
  color: #333;
}

.tabs{
  display:flex;
  margin-bottom:30rpx;
  background: #ffffff;
  border-radius: 12rpx;
  padding: 6rpx;
  box-shadow: 0 2rpx 10rpx rgba(74, 79, 159, 0.08);
}

.tab{
  flex:1;
  text-align:center;
  padding:16rpx 0;
  font-size:28rpx;
  color:#666;
  position:relative;
  transition: all 0.3s ease;
}

.tab.active{
  color:#4a4f9f;
  font-weight:500;
}

.tab.active:after{
  content:'';
  position:absolute;
  bottom:0;
  left:50%;
  transform:translateX(-50%);
  width:40rpx;
  height:4rpx;
  background:#6c72cb;
  border-radius:2rpx;
}

.ledger-card{
  background:#fff;
  border-radius:16rpx;
  padding:24rpx;
  margin-bottom:20rpx;
  display:flex;
  justify-content:space-between;
  align-items:center;
  box-shadow:0 2rpx 12rpx rgba(74, 79, 159, 0.08);
  transition: all 0.3s ease;
}

.ledger-card:active {
  transform: scale(0.98);
}

.card-content{
  display:flex;
  flex:1;
  align-items:center;
}

.cover{
  width:110rpx;
  height:110rpx;
  border-radius:12rpx;
  margin-right:20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.info{
  flex:1;
}

.row{
  display:flex;
  justify-content:space-between;
  align-items:center;
  margin-bottom:10rpx;
}

.name{
  font-size:32rpx;
  font-weight:500;
  color:#333;
}

.tag{
  font-size:22rpx;
  padding:4rpx 12rpx;
  border-radius:20rpx;
  display:inline-block;
  text-align:center;
  min-width:80rpx;
}

/* 不同角色的样式 */
.owner-tag {
  color: #6c72cb;
  background: rgba(108, 114, 203, 0.1);
}

.admin-tag {
  color: #8a6bc1;
  background: rgba(138, 107, 193, 0.1);
}

.member-tag {
  color: #a267ac;
  background: rgba(162, 103, 172, 0.1);
}

.meta{
  font-size:26rpx;
  color:#888;
}

.more{
  font-size:36rpx;
  color:#6c72cb;
  padding:10rpx;
  cursor:pointer;
}

.empty-container{
  text-align:center;
  padding:80rpx 0;
}

.empty{
  font-size:30rpx;
  color:#888;
  margin-bottom:30rpx;
}

.login-tip{
  font-size:28rpx;
  color:#666;
}

.login-btn{
  margin-top:20rpx;
  font-size:28rpx;
  background: #6c72cb;
}

/* 底部操作按钮 */
.action-buttons {
  position: fixed;
  bottom: 48rpx;
  right: 48rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  z-index: 10;
}

.create-btn {
  background: #6c72cb;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(108, 114, 203, 0.3);
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.create-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(108, 114, 203, 0.2);
}

.plus {
  font-size: 36rpx;
  margin-right: 8rpx;
}

/* 创建账本按钮 */
.create-ledger-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #6c72cb, #8a6bc1);
  color: #fff;
  width: 100%;
  height: 90rpx;
  border-radius: 16rpx;
  margin: 30rpx 0;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 16rpx rgba(108, 114, 203, 0.25);
  transition: all 0.3s ease;
}

.create-ledger-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(108, 114, 203, 0.2);
}

.create-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

/* 更多选项弹窗样式 */
.options-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
}

.options-backdrop {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.options-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 30rpx 0;
  animation: slideUp 0.3s ease;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.option-item {
  display: flex;
  align-items: center;
  padding: 24rpx 40rpx;
}

.option-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  color: #6c72cb;
}

.option-text {
  font-size: 32rpx;
  color: #333;
}

/* 删除选项样式 */
.delete-option {
  color: #e26d89;
}

.delete-option .option-icon {
  color: #e26d89;
}

.delete-option .option-text {
  color: #e26d89;
}

/* 邀请成员弹窗样式 */
.invite-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 101;
}

.invite-backdrop {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.invite-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  text-align: center;
  animation: fadeIn 0.3s ease;
  box-shadow: 0 8rpx 30rpx rgba(74, 79, 159, 0.2);
}

.invite-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  color: #4a4f9f;
}

.invite-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.invite-code {
  font-size: 48rpx;
  font-weight: 600;
  color: #6c72cb;
  background-color: rgba(108, 114, 203, 0.1);
  padding: 30rpx 20rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  letter-spacing: 8rpx;
  border: 2rpx dashed rgba(108, 114, 203, 0.3);
}

.copy-btn {
  background-color: #6c72cb;
  color: #fff;
  font-size: 30rpx;
  padding: 16rpx 0;
  border-radius: 40rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(108, 114, 203, 0.2);
  border: none;
}

.close-btn {
  font-size: 28rpx;
  color: #999;
  padding: 10rpx;
  margin-top: 10rpx;
}

/* 加入账本弹窗样式 */
.join-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 101;
}

.join-backdrop {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.join-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  text-align: center;
  animation: fadeIn 0.3s ease;
  box-shadow: 0 8rpx 30rpx rgba(74, 79, 159, 0.2);
}

.join-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  color: #4a4f9f;
}

.join-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.join-input {
  background-color: #f5f7fa;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  text-align: center;
  margin-bottom: 30rpx;
  letter-spacing: 2rpx;
  border: 2rpx solid rgba(108, 114, 203, 0.2);
}

.join-btn {
  background-color: #6c72cb;
  color: #fff;
  font-size: 30rpx;
  padding: 16rpx 0;
  border-radius: 40rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(108, 114, 203, 0.2);
  border: none;
}

/* 预算弹窗样式 */
.budget-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 101;
}

.budget-backdrop {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.budget-modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 30rpx rgba(74, 79, 159, 0.2);
}

.budget-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.budget-modal-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #4a4f9f;
}

.budget-modal-close {
  font-size: 40rpx;
  color: #999;
  line-height: 1;
}

.budget-modal-body {
  padding: 30rpx;
}

.budget-form-group {
  margin-bottom: 24rpx;
}

.budget-form-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.budget-form-input {
  width: 100%;
  height: 80rpx;
  background-color: #f5f7fa;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  border: 2rpx solid rgba(108, 114, 203, 0.2);
}

.budget-submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #6c72cb, #8a6bc1);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  margin-top: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(108, 114, 203, 0.25);
  border: none;
}

/* 动画效果 */
@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
