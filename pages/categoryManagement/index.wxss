.container {
  padding: 24rpx;
  position: relative;
  background-color: #f5f7fa;
  min-height: 100vh;
}

.page-title {
  font-size: 38rpx;
  font-weight: 600;
  margin-bottom: 30rpx;
  text-align: center;
  color: #4a4f9f;
  letter-spacing: 2rpx;
}

/* 标签切换 */
.tabs {
  display: flex;
  margin-bottom: 30rpx;
  background: #ffffff;
  border-radius: 12rpx;
  padding: 6rpx;
  box-shadow: 0 2rpx 10rpx rgba(74, 79, 159, 0.08);
}

.tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
  transition: all 0.3s ease;
}

.tab.active {
  color: #4a4f9f;
  font-weight: 500;
}

.tab.active:after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #6c72cb;
  border-radius: 2rpx;
}

/* 分类列表 */
.category-list {
  margin-bottom: 30rpx;
}

/* 空状态提示 */
.empty-state {
  /* 弹性布局：中心对齐 */
  display: flex;
  /* 垂直方向 */
  flex-direction: column;
  /* 水平居中 */
  justify-content: center;
  /* 垂直居中 */
  align-items: center;
  /* 最小高度 */
  min-height: 300rpx;
  /* 文字颜色 */
  color: #999;
  /* 字体大小 */
  font-size: 28rpx;
}

/* 一级分类样式 */
.category-parent-item {
  /* 弹性布局：水平排列，左右两端对齐 */
  display: flex;
  /* 左右两端对齐 */
  justify-content: space-between;
  /* 垂直居中对齐 */
  align-items: center;
  /* 白色背景 */
  background: #fff;
  /* 内边距 */
  padding: 24rpx;
  /* 下外边距 */
  margin-bottom: 8rpx;
  /* 圆角半径 */
  border-radius: 12rpx;
  /* 阴影效果 */
  box-shadow: 0 2rpx 8rpx rgba(74, 79, 159, 0.05);
  /* 左侧蓝色竖条装饰 */
  border-left: 4rpx solid #6c72cb;
  /* 字体粗体 */
  font-weight: 500;
  /* 过渡效果 */
  transition: all 0.3s ease;
  /* 鼠标指针显示为手指 */
  cursor: pointer;
}

/* 一级分类悬停效果 */
.category-parent-item:active {
  /* 缩放效果 */
  transform: scale(0.98);
  /* 点击时增加阴影 */
  box-shadow: 0 4rpx 12rpx rgba(74, 79, 159, 0.1);
}

/* 二级分类样式 */
.category-sub-item {
  /* 弹性布局：水平排列 */
  display: flex;
  /* 左右两端对齐 */
  justify-content: space-between;
  /* 垂直居中对齐 */
  align-items: center;
  /* 浅蓝色背景 */
  background: rgba(108, 114, 203, 0.05);
  /* 内边距 */
  padding: 20rpx 24rpx;
  /* 左侧增加缩进距离 */
  margin-left: 40rpx;
  /* 下外边距 */
  margin-bottom: 8rpx;
  /* 圆角半径 */
  border-radius: 8rpx;
  /* 阴影效果 */
  box-shadow: 0 1rpx 4rpx rgba(74, 79, 159, 0.03);
}

/* 二级分类缩进指示 */
.sub-category-indent {
  /* 宽度为0（隐藏） */
  width: 0;
}

.category-info {
  /* 弹性布局：水平排列 */
  display: flex;
  /* 垂直居中对齐 */
  align-items: center;
}

/* 展开/收起箭头样式 */
.expand-icon {
  /* 字体大小 */
  font-size: 24rpx;
  /* 右侧内边距 */
  margin-right: 12rpx;
  /* 过渡效果：平滑旋转 */
  transition: transform 0.3s ease;
  /* 颜色与主题色相同 */
  color: #6c72cb;
  /* 显示为内联块元素以支持旋转 */
  display: inline-block;
}

/* 展开状态的箭头（90度旋转向下） */
.expand-icon.expanded {
  /* 不需要额外旋转，箭头已经向下 */
  transform: rotate(0deg);
}

/* 收起状态的箭头（需要旋转为向右） */
.expand-icon:not(.expanded) {
  /* 向右旋转90度 */
  transform: rotate(-90deg);
}

.category-icon {
  /* 分类图标的字体大小 */
  font-size: 36rpx;
  /* 分类图标的右侧外边距 */
  margin-right: 20rpx;
}

.category-name {
  font-size: 30rpx;
  color: #333;
}

.category-actions {
  display: flex;
}

/* 操作按钮样式 */
.action-icon {
  /* 操作按钮的字体大小 */
  font-size: 32rpx;
  /* 操作按钮的内边距 */
  padding: 10rpx;
  /* 操作按钮之间的左外边距 */
  margin-left: 10rpx;
  /* 操作按钮的过渡效果 */
  transition: transform 0.2s ease;
}

/* 操作按钮悬停效果 */
.action-icon:active {
  /* 点击时的缩放效果 */
  transform: scale(1.2);
}

/* 编辑按钮的颜色 */
.action-icon.edit {
  /* 编辑按钮颜色 */
  color: #6c72cb;
}

/* 删除按钮的颜色 */
.action-icon.delete {
  /* 删除按钮颜色 */
  color: #e26d89;
}

/* 添加子分类按钮的颜色 */
.action-icon.add {
  /* 添加子分类按钮颜色 */
  color: #52c41a;
}

/* 添加分类按钮 */
.add-category-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #6c72cb, #8a6bc1);
  color: #fff;
  width: 100%;
  height: 90rpx;
  border-radius: 16rpx;
  margin: 30rpx 0;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 16rpx rgba(108, 114, 203, 0.25);
  transition: all 0.3s ease;
}

.add-category-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(108, 114, 203, 0.2);
}

.add-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-backdrop {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 30rpx rgba(74, 79, 159, 0.2);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #4a4f9f;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  line-height: 1;
}

.modal-body {
  padding: 30rpx;
}

.form-group {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background-color: #f5f7fa;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  border: 2rpx solid rgba(108, 114, 203, 0.2);
}

/* 图标网格 */
.icon-grid {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.icon-item {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  background-color: #f5f7fa;
  border-radius: 12rpx;
  margin: 10rpx;
  transition: all 0.3s ease;
}

.icon-item.selected {
  background-color: rgba(108, 114, 203, 0.1);
  border: 2rpx solid #6c72cb;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #6c72cb, #8a6bc1);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  margin-top: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(108, 114, 203, 0.25);
  border: none;
}
