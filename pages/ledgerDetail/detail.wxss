.container{padding:0;display:flex;flex-direction:column;height:100vh}
.tabs{display:flex;background:#fff;border-bottom:1rpx solid #eee}
.tab{flex:1;text-align:center;padding:24rpx 0;font-size:28rpx;color:#666;position:relative}
.tab.active{color:#07c160;font-weight:500}
.tab.active:after{content:'';position:absolute;bottom:0;left:50%;transform:translateX(-50%);width:40rpx;height:4rpx;background:#07c160;border-radius:2rpx}
.content{flex:1;overflow-y:auto;background:#f8f8f8}

/* 设置页样式 */
.setting-container {
  padding: 20rpx;
}

.setting-header {
  margin-bottom: 20rpx;
}

.setting-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.setting-list {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item-left {
  display: flex;
  align-items: center;
}

.setting-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.setting-name {
  font-size: 28rpx;
  color: #333;
}

.setting-arrow {
  color: #ccc;
  font-size: 28rpx;
}
