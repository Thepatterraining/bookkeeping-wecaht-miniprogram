.container{padding:0;display:flex;flex-direction:column;height:100vh}
.content{flex:1;overflow-y:auto;background:#f5f7fa;padding:20rpx;padding-bottom:160rpx}

/* 顶部标签栏样式（已废弃，保留兼容） */
.tabs{display:flex;background:#fff;border-bottom:1rpx solid #eee}
.tab{flex:1;text-align:center;padding:24rpx 0;font-size:28rpx;color:#666;position:relative}
.tab.active{color:#6c72cb;font-weight:500}
.tab.active:after{content:'';position:absolute;bottom:0;left:50%;transform:translateX(-50%);width:40rpx;height:4rpx;background:#6c72cb;border-radius:2rpx}

/* 底部导航栏样式 */
.bottom-tabs {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  background: #fff;
  border-top: 1rpx solid #eee;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.05);
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 100;
}

.bottom-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 12rpx 0;
  position: relative;
}

.tab-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 4rpx;
}

.tab-add-icon {
  width: 56rpx;
  height: 56rpx;
}

.tab-name {
  font-size: 22rpx;
  color: #999;
}

.bottom-tab.active .tab-name {
  color: #6c72cb;
  font-weight: 500;
}

/* 设置页样式 */
.setting-container {
  padding: 20rpx;
}

.setting-header {
  margin-bottom: 20rpx;
}

.setting-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #4a4f9f;
}

.setting-list {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(74, 79, 159, 0.08);
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item-left {
  display: flex;
  align-items: center;
}

.setting-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.setting-name {
  font-size: 28rpx;
  color: #333;
}

.setting-arrow {
  color: #ccc;
  font-size: 28rpx;
}

/* 预算弹窗样式 */
.budget-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 101;
}

.budget-backdrop {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.budget-modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 30rpx rgba(74, 79, 159, 0.2);
}

.budget-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.budget-modal-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #4a4f9f;
}

.budget-modal-close {
  font-size: 40rpx;
  color: #999;
  line-height: 1;
}

.budget-modal-body {
  padding: 30rpx;
}

.budget-form-group {
  margin-bottom: 24rpx;
}

.budget-form-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.budget-form-input {
  width: 100%;
  height: 80rpx;
  background-color: #f5f7fa;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  border: 2rpx solid rgba(108, 114, 203, 0.2);
}

.budget-submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #6c72cb, #8a6bc1);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  margin-top: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(108, 114, 203, 0.25);
  border: none;
}

/* 加载中样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(108, 114, 203, 0.2);
  border-top-color: #6c72cb;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #8a8a9a;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}
