.bill-list {
  background: #fff;
  border-radius: 16rpx;
  padding: 12rpx 0;
  box-shadow: 0 2rpx 12rpx rgba(74, 79, 159, 0.08);
}

.loading, .error, .empty {
  padding: 60rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(108, 114, 203, 0.2);
  border-top-color: #6c72cb;
  border-radius: 50%;
  margin-bottom: 20rpx;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.error icon, .empty icon {
  margin-bottom: 20rpx;
}

.bill-items {
  max-height: 800rpx;
  overflow-y: auto;
}

/* 日期分组头 */
.date-header {
  font-size: 24rpx; /* 日期字体 */
  color: #9aa3b2; /* 灰色文本 */
  font-weight: 500; /* 略微加粗 */
  padding: 16rpx 28rpx; /* 上下左右间距 */
  background-color: #f9f9fb; /* 浅灰背景 */
  border-top: 1rpx solid #f2f3f5; /* 上边框 */
}

/* 滑动删除相关样式 */
.swipe-area {
  width: 100%;
  position: relative;
  overflow: hidden;
}

/* 确保movable-area占满整个容器 */
.swipe-area movable-area {
  width: 100%;
  height: 140rpx;
}

/* 滑动视图样式 */
.swipe-item {
  display: flex;
  width: calc(100% + 150rpx); /* 增加宽度，为删除按钮留出空间 */
  height: 100%;
  position: relative;
  background-color: #fff;
}

/* 账单内容 */
.bill-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 28rpx;
  border-bottom: 1rpx solid #f2f3f5;
  background-color: #fff;
  height: 100%;
  box-sizing: border-box;
  width: calc(100vw - 40rpx); /* 减去删除按钮宽度和容器padding */
  flex-shrink: 0; /* 防止被压缩 */
}

.bill-item:active {
  background-color: #f9f9fb;
}

.bill-item:last-child {
  border-bottom: none;
}

/* 删除按钮 */
.delete-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 150rpx;
  height: 100%;
  background-color: #ff4d4f;
  color: #fff;
  font-size: 28rpx;
  flex-shrink: 0; /* 防止被压缩 */
}

.bill-left {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0;
  overflow: hidden;
  margin-right: 20rpx; /* 确保与右侧金额有间距 */
}

.icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #e0e7ff, #f5f3ff);
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  flex-shrink: 0;
}

.expense .icon {
  background: linear-gradient(135deg, #e0e7ff, #f5f3ff);
}

.income .icon {
  background: linear-gradient(135deg, #dcfce7, #f0fdf4);
}

.meta {
  display: flex;
  flex-direction: column;
  flex: 1;
  min-width: 0;
  overflow: hidden;
}

.category {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.desc {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.time {
  font-size: 22rpx;
  color: #9aa3b2;
  margin-top: 4rpx;
}

.bill-right {
  flex-shrink: 0; /* 防止金额部分被压缩 */
  min-width: 120rpx; /* 确保金额有足够的显示空间 */
  text-align: right; /* 金额右对齐 */
}

.bill-right .amount {
  font-size: 30rpx;
  font-weight: 700;
  white-space: nowrap; /* 防止金额换行 */
}

.expense-text {
  color: #e26d89;
}

.income-text {
  color: #07c160;
}
