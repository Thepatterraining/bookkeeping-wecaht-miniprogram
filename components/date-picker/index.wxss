.date-picker-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
}

.date-picker-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: -1;
}

.date-picker-container {
  width: 90%;
  max-width: 650rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 1000;
}

.date-picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.date-picker-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.date-picker-close {
  font-size: 40rpx;
  color: #999;
  padding: 0 10rpx;
}

.date-picker-content {
  padding: 20rpx;
}

/* 月份导航 */
.month-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.month-nav-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #666;
  font-size: 24rpx;
  border-radius: 50%;
  transition: background-color 0.3s;
}

.month-nav-btn:active {
  background-color: #f0f0f0;
}

.month-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

/* 星期标题 */
.weekdays {
  display: flex;
  margin-top: 20rpx;
}

.weekday {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  color: #999;
  padding: 10rpx 0;
}

/* 日期网格 */
.days-grid {
  display: flex;
  flex-wrap: wrap;
  margin-top: 10rpx;
}

.day-cell {
  width: 14.28%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.day-number {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  border-radius: 50%;
  transition: all 0.3s;
}

.other-month .day-number {
  color: #ccc;
}

.selected .day-number {
  background-color: #07c160;
  color: #fff;
}

.today .day-number {
  border: 1rpx solid #07c160;
  color: #07c160;
}

.today.selected .day-number {
  border: none;
  color: #fff;
}

/* 底部操作栏 */
.date-picker-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.today-btn {
  font-size: 28rpx;
  color: #07c160;
  padding: 10rpx 20rpx;
}

.action-btns {
  display: flex;
}

.cancel-btn, .confirm-btn {
  margin: 0 10rpx;
  font-size: 28rpx;
  padding: 0 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  min-width: 160rpx;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background-color: #07c160;
  color: #fff;
}
