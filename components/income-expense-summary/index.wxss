.summary-card {
  background: linear-gradient(135deg, #6c72cb, #8a6bc1);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(108, 114, 203, 0.25);
  color: #fff;
  overflow: hidden;
  position: relative;
}

/* 汇总头部 */
.summary-header {
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}

.month-selector {
  display: flex;
  align-items: center;
  padding: 6rpx 16rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
  cursor: pointer;
}

.month-text {
  font-size: 28rpx;
  color: #fff;
  margin-right: 8rpx;
}

.month-arrow {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 汇总内容 */
.summary-content {
  display: flex;
  justify-content: space-between;
}

.summary-item {
  flex: 1;
  text-align: center;
  position: relative;
}

.summary-item:not(:last-child):after {
  content: '';
  position: absolute;
  right: 0;
  top: 20%;
  bottom: 20%;
  width: 1rpx;
  background-color: rgba(255, 255, 255, 0.2);
}

.item-value {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.item-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.income {
  color: #fff;
}

.expense {
  color: #fff;
}

.balance.positive {
  color: #fff;
}

.balance.negative {
  color: #fff;
}

/* 月份选择器 */
.picker-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
}

.picker-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.picker-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  animation: slideUp 0.3s ease;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.picker-cancel, .picker-confirm {
  font-size: 30rpx;
  padding: 10rpx;
}

.picker-cancel {
  color: #999;
}

.picker-confirm {
  color: #6c72cb;
}

.picker-title {
  font-size: 32rpx;
  color: #4a4f9f;
}

.picker-body {
  height: 400rpx;
}

.picker-view {
  width: 100%;
  height: 100%;
}

.picker-item {
  line-height: 40px;
  text-align: center;
  font-size: 30rpx;
  color: #333;
}

/* 动画效果 */
@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}
